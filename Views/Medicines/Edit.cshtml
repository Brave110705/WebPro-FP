@model MyFirstAspApp.Models.Medicine
@{
    ViewData["Title"] = "Edit Medicine";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Medicine | Medicine Database</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-50 text-gray-800">

<!-- Navbar -->
<nav class="bg-green-600 text-white px-6 py-4 shadow-md">
    <div class="flex justify-between items-center">
        <h1 class="text-xl font-bold">ðŸ’Š Medicine Database</h1>
        <div class="space-x-4">
            <a asp-controller="Home" asp-action="Index" class="hover:underline">Home</a>
            <a asp-controller="Medicine" asp-action="Index" class="hover:underline">Database</a>
            @if (User.Identity.IsAuthenticated)
            {
                <span class="font-semibold">@User.Identity.Name</span>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Login" class="hover:underline">Login</a>
            }
        </div>
    </div>
</nav>

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-4 text-green-700">Edit Medicine</h1>

    <form asp-action="Edit" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />
        <div>
            <label class="block font-semibold mb-1">Medicine Name</label>
            <input asp-for="Name" class="border rounded px-3 py-2 w-full" required />
        </div>
        <div>
            <label class="block font-semibold mb-1">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="border rounded px-3 py-2 w-full" required />
        </div>
        <div>
            <label class="block font-semibold mb-1">Stock</label>
            <input asp-for="Stock" type="number" class="border rounded px-3 py-2 w-full" required />
        </div>
        <div>
            <label class="block font-semibold mb-1">Category</label>
            <input asp-for="Category" class="border rounded px-3 py-2 w-full" />
        </div>

        <div class="flex justify-between mt-6">
            <a asp-action="Index" class="text-gray-600 hover:underline">Back</a>
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded">
                Save Changes
            </button>
        </div>
    </form>
</div>
</body>
</html>
