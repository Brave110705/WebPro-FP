@{
    @* ViewData["Title"] = "Home"; *@
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medicine Database</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-50 text-gray-800">

    <!-- Navbar -->
    <nav class="bg-green-600 text-white px-6 py-4 shadow-md">
        <div class="flex justify-between items-center">
            <h1 class="text-xl font-bold">💊 Medicine Database</h1>
            <div class="space-x-4">
                <a asp-controller="Home" asp-action="Index" class="hover:underline">Home</a>
                <a asp-controller="Medicines" asp-action="Index" class="hover:underline">Database</a>

                @if (User.Identity.IsAuthenticated)
                {
                    <span class="font-semibold">@User.Identity?.Name</span>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="hover:underline">Login</a>
                }
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="max-w-3xl mx-auto mt-10 text-center">
        <h2 class="text-3xl font-bold mb-4">Welcome to the Medicine Database</h2>

        @if (User.Identity.IsAuthenticated)
        {
            <p class="text-lg text-gray-700 mb-6">
                ✅ You are logged in as <strong>@User.Identity?.Name</strong>!
                You can now modify the database.
            </p>
        }
        else
        {
            <p class="text-lg text-red-600 mb-6 font-semibold">
                ⚠️ You are not logged in! You won’t be able to modify the database.
            </p>
        }

        <p class="text-lg text-gray-600 mb-6">
            This is a web project used for a final project assignment
        </p>

        <a asp-controller="Medicines" asp-action="Index"
           class="bg-green-600 text-white px-5 py-3 rounded-lg shadow hover:bg-green-700 transition">
            Go to Database
        </a>
    </main>

    <!-- Logout -->
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="fixed bottom-1 right-0">
            <button type="submit" 
                class="text-red-600 hover:text-red-800 font-semibold underline transition">
                Log out
            </button>
        </form>
    }

</body>
</html>
